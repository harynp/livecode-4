<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Items</title>
  </head>
  <body>
    <h1>Items</h1>
    <td><a href="/items/add">Add</td></a>
    <table border='1px'>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Brand</th>
          <th>Code Item</th>
          <th>List Suppliers</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% dataItems.forEach(row=>{ %>
          <tr>
            <td><%= row.id %></td>
            <td><%= row.name %></td>
            <td><%= row.brand %></td>
            <td><%= row.codeitem %></td>
            <td><%= supplier_name %></td>
            <td><a href="/items/edit/<%= row.id %>">Edit</td></a>
            <td><a href="/items/delete/<%= row.id %>">Delete</td></a>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
